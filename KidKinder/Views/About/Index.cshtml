@model List<KidKinder.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}
@Html.Action("AboutHeaderPartial", "About")

<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-5">
                    <img class="img-fluid rounded mb-5 mb-lg-0"
                         src="@item.BigImageUrl"
                         alt="" />
                </div>
                <div class="col-lg-7">
                    <p class="section-title pr-5">
                        <span class="pr-2">@item.Header</span>
                    </p>
                    <h1 class="mb-4">@item.Title</h1>
                    <p>
                        @item.Description
                    </p>
                    <div class="row pt-2 pb-4">
                        <div class="col-6 col-md-4">
                            <img class="img-fluid rounded" src="@item.SmallImageUrl" alt="" />
                        </div>
                        @Html.Action("PartialAboutList", "Default")
                    </div>
                    <div class="row pt-2 pb-4">
                        <div class="col-6 col-md-4">
                            <a href="" class="btn btn-primary mt-2 py-2 px-4">Bilgi Alın</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


</div>